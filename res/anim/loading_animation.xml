<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false">
    <rotate
        android:duration="1500"
        android:fromDegrees="0"
        android:toDegrees="+360"
        android:startOffset="0"
        android:pivotX="50%"
