<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="2dp"
            android:layout_height="5dp"
            android:background="@color/c_bebebe" />

        <ImageView
            android:id="@+id/listview_item_logistics_detail_img_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logistics_point_gray"
            android:contentDescription="@string/content_description" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/c_bebebe" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/listview_item_logistics_detail_address"
            style="@style/text_style_15_8e8e8e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listview_item_logistics_detail_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/c_8e8e8e"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_ddf1f1f1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>