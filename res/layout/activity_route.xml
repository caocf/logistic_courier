<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_route_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/activity_route_google_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.MapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical" >

        <com.dekaisheng.courier.widget.SlideBottomPanel
            android:id="@+id/sbv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sbp_hide_panel_title="true"
            app:sbp_panel_height="380dp"
            app:sbp_title_height_no_display="@dimen/dp50" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:background="@drawable/border_line"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/activity_route_layout_arrow_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_line"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <!-- 
                    <ImageView
                        android:id="@+id/activity_route_img_arrow_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/arrow_up_gray" />
                    -->
                    <TextView
                        android:id="@+id/activity_route_txt_distance"
                        style="@style/text_style_16_black"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp50"
                        android:text="Calculation of route..."
                        android:gravity="center" />
                </LinearLayout>

                <ListView
                    android:id="@+id/activity_route_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="@null" />
            </LinearLayout>
        </com.dekaisheng.courier.widget.SlideBottomPanel>
        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/activity_route_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_line"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/activity_route_layout_arrow_up"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp" >

                <ImageView
                    android:id="@+id/activity_route_img_arrow_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/arrow_up_gray" />

                <TextView
                    android:id="@+id/activity_route_txt_distance"
                    style="@style/text_style_20_black"
