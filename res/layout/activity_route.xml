            </LinearLayout>
         
        </LinearLayout>

        <ListView
            android:id="@+id/activity_route_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/border_line"
            android:divider="@null"
            android:scrollbars="@null" />
        -->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_route_actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:layout_gravity="top"
        android:background="@drawable/border_line" >

        <ImageView
            android:id="@+id/activity_route_img_goback"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:scaleType="centerInside"
            android:src="@drawable/selector_go_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_route_img_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/activity_route_img_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:src="@drawable/travel_mode_car" />

            <ImageView
                android:id="@+id/activity_route_img_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_clear_green"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/activity_route_img_bycycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/travel_mode_bycycle"
                 />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>