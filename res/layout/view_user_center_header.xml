<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/veiw_user_center_img_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/selector_go_back"
            android:focusable="true" />

        <TextView
            android:id="@+id/view_user_center_header_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:text="Sam"
            style="@style/text_style_20_black" />

        <ImageView
            android:id="@+id/veiw_user_center_img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/menu_more_white" />
        <TextView
            android:id="@+id/view_user_center_header_menu_position"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_gravity="bottom|end" />
    </FrameLayout>

</LinearLayout>