<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_e6e6e6"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/c_242a39"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_googel_geo_code_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/selector_go_back" />
        
        <EditText
            android:id="@+id/activity_googel_geo_code_input_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            style="@style/text_style_15_black"
            android:layout_weight="1"
            android:background="@drawable/shape_corners_solid_white_rect" />

        <ImageView
            android:id="@+id/activity_googel_geo_code_img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_home_search" />

    </LinearLayout>
    
    <ListView
        android:id="@+id/activity_googel_geo_code_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp" />

</LinearLayout>
